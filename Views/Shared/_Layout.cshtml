<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Страны</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/countries.styles.css" asp-append-version="true" />
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">countries</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Список стран</a>
                    <a asp-area="" asp-controller="Home" asp-action="Details">Детали</a>
                </div>
            </div>
        </nav>
       
    </header>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
       
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
             <a asp-area="" asp-controller="Home" asp-action="Index">Список стран</a>
             <a asp-area="" asp-controller="Home" asp-action="Details">Детали</a>
             <a href="https://docs.microsoft.com/aspnet/core">Инструкция ASP.NET Core</a>.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- ОБЯЗВТЕЛЬНО ДОБАВИТЬ - БЕЗ НЕЕ НЕ ПОЯВИТЬСЯ ТО ЧТО НУЖНО (Razor + JS+ HTML)-->
    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>
